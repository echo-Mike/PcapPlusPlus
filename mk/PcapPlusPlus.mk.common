### COMMON ###

# includes
PCAPPP_INCLUDES := -I$(PCAPPLUSPLUS_HOME)/Dist/header

# libs dir
PCAPPP_LIBS_DIR := -L$(PCAPPLUSPLUS_HOME)/Dist

# libs
PCAPPP_LIBS := -lPcap++ -lPacket++ -lCommon++

# post build
PCAPPP_POST_BUILD :=

# build flags
PCAPPP_BUILD_FLAGS :=

ifndef PCAPPP_LIBRARY_WIDE_CXXFLAGS

ifdef SUPPRESS_CPP11

PCAPPP_LIBRARY_WIDE_CXXFLAGS += -DSUPPRESS_CPP11_DETECTION

else

PCAPPP_LIBRARY_WIDE_CXXFLAGS += -std=c++11

endif

endif