### COMMON ###

# includes
PCAPPP_INCLUDES := -I$(PCAPPLUSPLUS_HOME)/Dist/header

# libs dir
PCAPPP_LIBS_DIR := -L$(PCAPPLUSPLUS_HOME)/Dist

# libs
ifdef USE_DPDK

PCAPPP_LIBS := -Wl,--whole-archive -lPcap++ -lPacket++ -Wl,--no-whole-archive -lCommon++

else

PCAPPP_LIBS := -lPcap++ -lPacket++ -lCommon++

endif

# post build
PCAPPP_POST_BUILD :=

# build flags
PCAPPP_BUILD_FLAGS :=

ifndef CXX_STANDARD

CXX_STANDARD := c++98

endif